<resources>
    <style name="Metrodroid.Dark" parent="@android:style/Theme.DeviceDefault">
        <item name="ButtonBarStyle">@android:style/Holo.ButtonBar.AlertDialog</item>
        <item name="BorderlessButtonStyle">@android:style/Widget.Holo.Button.Borderless.Small</item>
        <item name="ButtonBarButtonStyle">@android:style/Widget.Holo.Button.Borderless.Small</item>
        <item name="AddKeyIcon">@android:drawable/ic_menu_add</item>
        <item name="AddKeyTextColor">@android:color/white</item>
        <item name="LockImage">@drawable/locked</item>
        <item name="AddKeysActivityTheme">@style/Metrodroid.Dark.Dialog</item>
        <item name="MainActivityTheme">@style/Metrodroid.Dark</item>
        <item name="ListHeaderTextColor">@android:color/background_light</item>
        <item name="TransportIcons">@array/Metrodroid.Dark.TransportIcons</item>
    </style>

    <style name="Metrodroid.Dark.Dialog" parent="@android:style/Theme.DeviceDefault.Dialog">
        <item name="ButtonBarStyle">@android:style/Holo.ButtonBar.AlertDialog</item>
        <item name="BorderlessButtonStyle">@android:style/Widget.Holo.Button.Borderless.Small</item>
        <item name="ButtonBarButtonStyle">@android:style/Widget.Holo.Button.Borderless.Small</item>
        <item name="AddKeyIcon">@android:drawable/ic_menu_add</item>
        <item name="AddKeyTextColor">@android:color/white</item>
        <item name="LockImage">@drawable/locked</item>
        <item name="ListHeaderTextColor">@android:color/background_light</item>
    </style>

    <integer-array name="Metrodroid.Dark.TransportIcons" >
        <item>@drawable/bus</item>
        <item>@drawable/train</item>
        <item>@drawable/tram</item>
        <item>@drawable/metro</item>
        <item>@drawable/ferry</item>
        <item>@drawable/tvm</item>
        <item>@drawable/vending_machine</item>
        <!-- TODO: Handle currencies other than Yen
             This is only used by Edy and Suica at present. -->
        <item>@drawable/cashier_yen</item>
        <item>@drawable/unknown</item>
        <item>@drawable/banned</item>
    </integer-array>

    <style name="Metrodroid.Light" parent="@android:style/Theme.DeviceDefault.Light">
        <item name="ButtonBarStyle">@android:style/Holo.Light.ButtonBar.AlertDialog</item>
        <item name="BorderlessButtonStyle">@android:style/Widget.Holo.Light.Button.Borderless.Small</item>
        <item name="ButtonBarButtonStyle">@android:style/Widget.Holo.Light.Button.Borderless.Small</item>
        <item name="AddKeyIcon">@android:drawable/ic_menu_add</item>
        <item name="AddKeyTextColor">@android:color/black</item>
        <item name="LockImage">@drawable/locked</item>
        <item name="AddKeysActivityTheme">@style/Metrodroid.Light.Dialog</item>
        <item name="MainActivityTheme">@style/Metrodroid.Light</item>
        <item name="ListHeaderTextColor">@android:color/background_dark</item>
        <item name="TransportIcons">@array/Metrodroid.Light.TransportIcons</item>
    </style>

    <style name="Metrodroid.Light.Dialog" parent="@android:style/Theme.DeviceDefault.Dialog">
        <item name="ButtonBarStyle">@android:style/Holo.Light.ButtonBar.AlertDialog</item>
        <item name="BorderlessButtonStyle">@android:style/Widget.Holo.Light.Button.Borderless.Small</item>
        <item name="ButtonBarButtonStyle">@android:style/Widget.Holo.Light.Button.Borderless.Small</item>
        <item name="AddKeyIcon">@android:drawable/ic_menu_add</item>
        <item name="AddKeyTextColor">@android:color/black</item>
        <item name="LockImage">@drawable/locked</item>
        <item name="ListHeaderTextColor">@android:color/background_dark</item>
    </style>

    <integer-array name="Metrodroid.Light.TransportIcons" >
        <item>@drawable/bus</item>
        <item>@drawable/train</item>
        <item>@drawable/tram</item>
        <item>@drawable/metro</item>
        <item>@drawable/ferry</item>
        <item>@drawable/tvm_black</item>
        <item>@drawable/vending_machine_black</item>
        <!-- TODO: Handle currencies other than Yen
                This is only used by Edy and Suica at present. -->
        <item>@drawable/cashier_yen</item>
        <item>@drawable/unknown_black</item>
	<item>@drawable/banned</item>
    </integer-array>
</resources>
